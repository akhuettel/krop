#!/usr/bin/make -f

%:
	dh $@ --with python2


binary: binary-indep

binary-indep: build
	dh binary-indep

	dh_desktop

override_dh_auto_install:
	python setup.py install --root=debian/krop --install-layout=deb --install-lib=/usr/share/krop --install-scripts=/usr/share/krop
	mv debian/krop/usr/share/krop/krop/krop debian/krop/usr/share/krop/krop.py
override_dh_auto_build:
